<!DOCTYPE html>
<html lang="en">
<head>
    <!-- including head partial-->
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <!-- including header partial-->
    <%- include('../partials/header'); %>
</header>
<!-- Contact Us section-->
<main>
    <div class="container">
        <br><br>
        <div class="text-center">
            <h2 class="section-heading text-uppercase"><%- title %></h2>
        </div>
        <br><br>
        <div class="row">
            <div class="offset-md-1 col-md-10">
                <a href="contactlist/add" class="btn btn-dark" role="button">
                    <i class="fas fa-plus-circle"></i> Add a Contact
                    </a>
                    <br><br>
                <table class="table table-bordered table-striped">
                    <!-- Header Row -->
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Contact Name</th>
                        <th class="text-center">Contact Number</th>
                        <th class="text-center">Email</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                    </tr>
    
                    <!-- Repeatable Template  Row-->
                    <% for(let count = 0; count < contactlist.length; count++) { %>
                        <tr>
                            <td class="text-center"><%- contactlist[count].id %></td>
                            <td class="text-center"><%- contactlist[count].name %></td>
                            <td class="text-center"><%- contactlist[count].contactnumber %></td>
                            <td class="text-center"><%- contactlist[count].email %></td>
                            <td class="text-center">
                                <a href="contactlist/edit/<%- contactlist[count]._id %>"  class="btn btn-secondary" role="button">
                                    <i class="fas fa-pencil-alt"></i> Edit
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="contactlist/delete/<%- contactlist[count]._id %>"  class="btn btn-secondary" role="button">
                                    <i class="fas fa-trash-alt"></i> delete
                                 </a>
                            </td>
                        </tr>
                    <% }%>
                </table>  
            </div>
        </div>

    </div>
    <br><br>
</main>

<footer>
    <!-- including footer partial-->
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>